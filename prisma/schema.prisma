generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EventLogs {
  // Attributes
  id         Int    @id @default(autoincrement())
  event_name String @db.VarChar(150)
  model_name String @db.VarChar(100)
  model_id   Int    @db.Integer
  event_data Json   @db.Json

  // Timestamps
  created_at DateTime @default(now()) @db.Timestamp()
  created_by String   @db.VarChar(100)

  // Indexes
  @@index([created_at])
  @@index([created_by])
}
